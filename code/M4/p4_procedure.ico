
procedure main()
    local numbers
    write("Input a large number (only numeric):")
    numbers := read()   
    every write(!printEven(numbers))
    every write(!printOdd(numbers))
end

procedure printEven(n)
    local evenList,i
    evenList := []
    n ? {
        while i := move(1) do
            if (i % 2 == 0) then evenList := evenList ||| [i]
    } 
    write("Show even numbers:")
    return evenList
end

procedure printOdd(n)
    local oddList,i
    oddList := []
    n ? {
        while i := move(1) do
            if (i % 2 == 1) then{
            oddList |||:= [i]
            }
    } 
    write("Show odd numbers:")
    return oddList
end
    