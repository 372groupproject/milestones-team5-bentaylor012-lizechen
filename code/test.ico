global str, line, numbers, i, evenList

procedure main()
    str := "Welcome to icon language"
    printLine(str)
    write("Input a large number (only numeric):")
    numbers := read()   
    every write(!printEven(numbers))
end

procedure printLine(n)
    write("Hello world")
    write(n)
end

procedure printEven(n)
    evenList := []
    n ? {
        while i := move(1) do
            if (i % 2 == 0) then evenList := evenList ||| [i]
    } 
    write("Show even numbers:")
    return evenList
end

